<body class="background-headset">

    <div class="center-elements">

        <div>
            <img class="main-logo-2" src="/wave_logo.png">
        </div>

        <div class="login-container-2">
            <p class="login-title">Sign up</p>

            <form action="/signup" method="POST">

                <div class="form-field-container margin-top-2">
                    <label class="login-form-label" for="username">Username</label>
                    <input class="login-form-field" type="text" class="form-control" name="username" id="username">
                </div>

                <div class="form-field-container margin-top-2">
                    <label class="login-form-label" for="name">Name</label>
                    <input class="login-form-field" type="text" class="form-control" name="name" id="name">
                </div>
                
                <div class="form-field-container margin-top-2">
                    <label class="login-form-label" for="email">E-mail</label>
                    <input class="login-form-field" type="email" class="form-control" name="email" id="email">
                </div>

                <div class="form-field-container margin-top-2">
                    <label class="login-form-label" for="pwd">Password</label>
                    <input class="login-form-field" type="password" class="form-control" name="pwd" id="pwd">
                </div>


                <button class="main-btn-2 margin-top" type="submit" class="btn btn-dark btn-block btn-lg">Get me in!</button>

            </form>
        </div>

        <div>
            {{#if errorMessage}}
                <div>
                    {{errorMessage}}
                </div>
            {{/if}}
        </div>


        <div class="underline-div">
            <a class="under-btn" href="/login">Already have an account? <span class="color-blue">Log in</span></a>
        </div> 

    </div>   

</body>